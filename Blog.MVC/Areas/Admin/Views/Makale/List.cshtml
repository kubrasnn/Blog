
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using Blog.Entity.Entities;
@model IEnumerable<Makale>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <header class="panel-heading">Makaleler</header>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Statü</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>İçerik</th>
                                <th>Yazan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
    {
                            <tr>
                                <td><span class="label label-success">Tamamlandı</span></td>
                                <td>@item.Baslik</td>
                                <td>@item.EklenmeTarihi</td>
                                @if (item.Icerik.Length <= 290)
                          {
                            <td>@Html.Raw(item.Icerik)</td>
                          }
                                 else
                          {
                            <td>@Html.Raw(item.Icerik.Substring(0,290))</td>
                          }
                                <td><a href="#">Admin</a></td>
                                <td>
                                    <a class="btn btn-info btn-sm" type="submit " href="/Admin/Makale/Edit/@item.MakaleId">Düzenle</a>                                  
                                    <a class="btn btn-danger btn-sm" type="submit" href="/Admin/Makale/Delete/@item.MakaleId">Sil</a>
                                </td>
                            </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


