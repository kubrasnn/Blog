
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Blog.Entity.Entities
@model Makale
<body>

    @if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
    else if (ViewBag.IsSuccess != null || ViewBag.IsSuccess == false)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">Makale Ekle</header>
                <div class="panel-body">
                    @using (Html.BeginForm("Edit", "Makale", FormMethod.Post))
    {

                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.MakaleId)
                <div class="form-group">
                    <label for="input" class="col-sm-1 control-label">Başlık</label>
                    <div class="col-sm-11">
                        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", @id = "input", @placeholder = "Başlık" })
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Baslik)</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <header class="panel-heading">İçerik Yazısı</header>
                            <div class="panel-body">
                                <div style="height: 350px">
                                    @Html.TextAreaFor(x => x.Icerik, new { @class = "form-control", @id = "editor", @placeholder = "İçerik yaz" ,Value=Html.Raw(Model.Icerik)})
                                    <span class="text-danger">@Html.ValidationMessageFor(x => x.Icerik)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <label for="exampleInputFile">Resim Ekle</label>
                        <input type="file" id="exampleInputFile">
                        <p class="help-block">Resminizi buradan seçebilirsiniz</p>
                    </div>
                    <div class="col-md-6">
                        <div class="col-sm-8">
                            <div class="input-group date" id="datetimepicker1">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                @Html.TextBoxFor(x => x.EklenmeTarihi, new { @class = "form-control", @id = "input", @placeholder = "Tarih" })
                                <span class="text-danger">@Html.ValidationMessageFor(x => x.EklenmeTarihi)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-10">
                        <input class="btn btn-default" type="submit" value="Düzenle" />
                    </div>
                </div>
}
                </div>
            </div>
        </div>
    </div>
</body>