
@{
    Layout = null;
}

<!DOCTYPE html>

@using System.Web.Optimization
@model Blog.MVC.Areas.Admin.Models.LoginModel

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800,400italic%7cMontserrat:400,700" rel="stylesheet" type="text/css">
    <link href="~/Content/Admin/css/typicons.min.css" rel="stylesheet">
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Admin/css/main.min.css" rel="stylesheet">

</head>
<body class="login-page">
    <div class="container">
        <p class="text-center">
            <img src="~/Content/Admin/img/logo.png" alt="Logo"><br><br>
        </p>
        <div class="login-buttons">
            <button class="btn btn-login" data-toggle="modal" data-target="#loginModal">Giriş</button>
        </div>
    </div>
    <!-- Login modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Lütfen Giriş Yapınız</h4>
                </div> 
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="modal-body">
                        <div class="text-danger">@ViewBag.FormResult</div>
                        @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Email, new { @type = "email", @class = "form-control", @placeholder = "Email adresi" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @placeholder = "Parola" })
                                @Html.ValidationMessageFor(x => x.Password)

                            </div>
                            <label class="checkbox">
                                @Html.CheckBoxFor(x => x.RememberMe, new { @type = "checkbox", @class = "form-check-input", @value = "remember-me" })Beni Hatırla
                            </label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Çıkış</button>
                        <input type="submit" class="btn btn-primary" value="Giriş Yap"/>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Content/Admin/js/jquery.min.js"></script>
    <script src="~/Content/Admin/js/modernizr.min.js"></script>
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/main.js"></script>
</body>
</html>