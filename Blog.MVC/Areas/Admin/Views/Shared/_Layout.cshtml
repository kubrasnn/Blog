    <script src="~/Content/Admin/js/plugins/calendar/underscore.min.js"></script>
    <script src="~/Content/Admin/js/plugins/calendar/calendar.min.js"></script>
    <script src="~/Content/Admin/js/maskedinput.min.js"></script>
    <script src="~/Content/Admin/js/plugins/datepicker/moment.min.js"></script>
    <script src="~/Content/Admin/js/plugins/datepicker/datetimepicker.min.js"></script>
    <script src="~/Content/Admin/js/page-form-elements.js"></script>
    <script src="~/Content/Admin/js/main.js"></script>
